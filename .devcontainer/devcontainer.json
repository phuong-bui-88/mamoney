{
  "name": "MaMoney - Flutter Development",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "flutter-dev",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "ms-vscode.cpptools",
        "esbenp.prettier-vscode",
        "DBSonder.more-flutter-snippets"
      ],
      "settings": {
        "dart.sdk": "/usr/local/flutter/bin/cache/dart-sdk",
        "dart.flutterSdkPath": "/usr/local/flutter",
        "dart.triggerSignatureHelpAutomatically": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "Dart-Code.dart-code",
        "[dart]": {
          "editor.defaultFormatter": "Dart-Code.dart-code",
          "editor.formatOnSave": true
        }
      }
    }
  },
  "remoteUser": "root",
  "forwardPorts": [8080, 5037],
  "portsAttributes": {
    "8080": {
      "label": "Flutter Web App",
      "onAutoForward": "notify"
    },
    "5037": {
      "label": "ADB Daemon",
      "onAutoForward": "silent"
    }
  },
  "postCreateCommand": "git init && git config user.email 'dev@mamoney.local' && git config user.name 'Developer' && git add . && git commit -m 'Initial commit' --allow-empty && flutter pub get"
}
