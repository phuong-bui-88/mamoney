{
  "name": "MaMoney - Flutter Development",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "flutter-dev",
  "workspaceFolder": "/workspace",
  "remoteUser": "flutteruser",
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "ms-vscode.cpptools",
        "esbenp.prettier-vscode",
        "DBSonder.more-flutter-snippets",
        "GitHub.copilot"
      ],
      "settings": {
        "dart.sdk": "/usr/local/flutter/bin/cache/dart-sdk",
        "dart.flutterSdkPath": "/usr/local/flutter",
        "editor.formatOnSave": true
      }
    }
  },
  "portsAttributes": {
    "8081": {
      "label": "Flutter Web App",
      "onAutoForward": "notify"
    }
  },
  "remoteEnv": {
    "PATH": "/usr/local/flutter/bin:/usr/local/flutter/bin/cache/dart-sdk/bin:/usr/bin:/bin:$PATH"
  },
  "postCreateCommand": "flutter doctor"
}
