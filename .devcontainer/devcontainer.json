{
  "name": "MaMoney - Flutter Development",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "flutter-dev",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "ms-vscode.cpptools",
        "esbenp.prettier-vscode",
        "DBSonder.more-flutter-snippets",
        "GitHub.copilot-chat"
      ],
      "settings": {
        "dart.sdk": "/usr/local/flutter/bin/cache/dart-sdk",
        "dart.flutterSdkPath": "/usr/local/flutter",
        "dart.triggerSignatureHelpAutomatically": true,
        "editor.formatOnSave": true,
        "[dart]": {
          "editor.defaultFormatter": null,
          "editor.formatOnSave": true
        }
      }
    }
  },
  "remoteUser": "flutteruser",
  "forwardPorts": [
    8080,
    5037
  ],
  "portsAttributes": {
    "8080": {
      "label": "Flutter Web App",
      "onAutoForward": "notify"
    },
    "5037": {
      "label": "ADB Daemon",
      "onAutoForward": "silent"
    }
  },
  "postCreateCommand": "flutter --version && flutter pub get && flutter doctor && flutter build web"
}